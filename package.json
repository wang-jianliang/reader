{
  "name": "voicer",
  "displayName": "Voicer",
  "version": "0.0.1",
  "description": "Voicer is a browser plugin that brings your selected web text to life through speech using TTS(Text To Speech) technology.",
  "author": "jianliangw1@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.35.1",
    "@plasmohq/storage": "^1.10.0",
    "plasmo": "0.86.3",
    "prop-types": "^15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-epic-spinners": "^0.5.0",
    "react-modern-audio-player": "1.4.0-rc.2",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "trustedDependencies": [
     "sharp"
  ],
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "sandboxes/player.html",
          "assets/*"
        ],
        "matches": [
          "*://*/*"
        ]
      }
    ]
  }
}
